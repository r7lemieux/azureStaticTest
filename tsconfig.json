{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonJS",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"rootDir": "/",
		"lib": [
			"esnext"
		],
		"target": "es6"
	},
	"compileOnSave": true,
	"include": [
		"./server.ts",
		"./server.js",
		"./src/**/*.js",
		"./src/**/*.ts",
		"./public/**/*"
	],
//	"exclude": [
//		"../node_modules/**"
//	]
}
